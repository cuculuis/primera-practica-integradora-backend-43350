    <div class="container mt-5 text-bg-light">
        <div class="text-center">
            <h3 class="pt-4" style="color:blue;">ADD PRODUCTS</h3>
        </div>
        <br>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <form class="row" action="/realTimeProducts" method="post">
                        
                    <div class="form-group col-4">
                        <label for="title"><b>Title</b></label>
                        <input id="title" class="form-control" type="text" name="title">
                    </div>
                    
                    <div class="form-group col-4">
                        <label for="description"><b>Description</b></label>
                        <input id="description" class="form-control" type="text" name="description">
                    </div>


                    <div class="form-group col-4">
                        <label for="code"><b>Code</b></label>
                        <input id="code" class="form-control" type="text" name="code">
                    </div>


                    <div class="form-group col-4">
                        <label for="price"><b>Price</b></label>
                        <input id="price" class="form-control" type="text" name="price">
                    </div>


                    <div class="form-group col-4 d-flex flex-column justify-content-center align-items-center">
                        <label for="status"><b>Status</b></label>
                        <div class="form-check">
                            <input id="status" class="form-check-input" type="checkbox" name="status" value="true">
                            <label class="form-check-label" for="status">Available</label>
                        </div>
                    </div>


                    <div class="form-group col-4">
                        <label for="stock"><b>Stock</b></label>
                        <input id="stock" class="form-control" type="text" name="stock">
                    </div>


                    <div class="form-group col-6">
                        <label for="thumbnail"><b>Thumbnail</b></label>
                        <input id="thumbnail" class="form-control" type="text" name="thumbnail">
                    </div>


                    <div class="form-group col-6">
                        <label for="category"><b>Category</b></label>
                        <input id="category" class="form-control" type="text" name="category">
                    </div>

                    <div class="text-center">
                        <button class="btn btn-success mt-3 mb-5">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

            {{#if products.length}}
            <div class="container">
                <div class="text-center">
                    <h3 style="color:blue;">Product List</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-dark mt-3 text-center">
                        <tr style="color: yellow;">
                            <th>ID</th>
                            <th>Product</th>
                            <th>Description</th>
                            <th>Code</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Stock</th>
                            <th>Image</th>
                            <th>Category</th>
                            <th>DELETE</th>
                        </tr>

                        {{#each products}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.code}}</td>
                            <td>{{this.price}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.stock}}</td>
                            <td>
                                <img style="width: 60px" src="{{this.thumbnail}}" alt="{{this.title}}">
                            </td>
                            <td>{{this.category}}</td>
                            <td>
                                <form id="deleteForm" action="/realTimeProducts/{{this.id}}" method="post">
                                    <button class="btn btn-danger btn-sm delete-product-btn" data-product-id="{{this.id}}">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
                {{else}}
                <h3 class="container alert alert-danger text-center">THERE ARE NO PRODUCTS</h3>
                {{/if}}
            </div>