    <div class="container mt-5">
        {{#if products.length}}
                <h3 class="text-center" style="color:blue;">LISTA DE PRODUCTOS</h3>
                <div class="container table-responsive">
                    <table class="table table-dark text-center">
                        <tr style="color: yellow;">
                            <th>Product</th>
                            <th>Description</th>
                            <th>Code</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Stock</th>
                            <th>Image</th>
                            <th>Category</th>
                        </tr>

                        {{#each products}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.code}}</td>
                            <td>{{this.price}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.stock}}</td>
                            <td>
                                <img style="width: 60px" src="{{this.thumbnail}}" alt="{{this.title}}">
                            </td>
                            <td>{{this.category}}</td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
                {{else}}
                <h3 class="container alert alert-danger">THERE ARE NO PRODUCTS</h3>
        {{/if}}
    </div>